<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarActualizarPasajeroActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Agregar/Actualizar Pasajero"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_pasajero"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_pasajero"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_pasajero" />

    <EditText
        android:id="@+id/input_nombre_pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_fecha_nacimiento_pasajero"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_nacimiento_pasajero"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_nacimiento_pasajero" />

    <EditText
        android:id="@+id/input_fecha_nacimiento_pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Fecha Nacimiento"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/input_numero_telefono_pasajero"
        app:layout_constraintEnd_toEndOf="@+id/input_numero_telefono_pasajero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_numero_telefono_pasajero" />

    <EditText
        android:id="@+id/input_numero_telefono_pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Numero Telefono"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <EditText
        android:id="@+id/input_peso_pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Peso"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_numero_telefono_pasajero"
        app:layout_constraintStart_toStartOf="@+id/input_numero_telefono_pasajero"
        app:layout_constraintTop_toBottomOf="@+id/input_numero_telefono_pasajero" />

    <Spinner
        android:id="@+id/spinner_discapacidad_pasajero"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/input_peso_pasajero"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/input_peso_pasajero"
        app:layout_constraintTop_toBottomOf="@+id/input_peso_pasajero" />

    <Button
        android:id="@+id/btn_aceptar_agregar_pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863" />
</androidx.constraintlayout.widget.ConstraintLayout>